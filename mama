  <script>
    // Tim bay ng·∫´u nhi√™n
    function createHeart() {
      const heart = document.createElement("div");
      heart.classList.add("heart");
      heart.textContent = "‚ù§Ô∏è";
      heart.style.left = Math.random() * 100 + "vw";
      heart.style.animationDuration = Math.random() * 2 + 3 + "s";
      document.body.appendChild(heart);
      setTimeout(() => heart.remove(), 5000);
    }
    setInterval(createHeart, 300);

    // Hoa bay ng·∫´u nhi√™n
    function createFlower() {
      const flower = document.createElement("div");
      flower.classList.add("flower");
      flower.textContent = "üå∏";
      flower.style.left = Math.random() * 100 + "vw";
      flower.style.animationDuration = Math.random() * 3 + 4 + "s";
      document.body.appendChild(flower);
      setTimeout(() => flower.remove(), 7000);
    }
    setInterval(createFlower, 500);

    // ƒêi·ªÅu khi·ªÉn nh·∫°c
    const music = document.getElementById("music");
    const musicBtn = document.getElementById("musicBtn");
    let isPlaying = false;
    
    musicBtn.addEventListener("click", () => {
      if (isPlaying) {
        music.pause();
        musicBtn.textContent = "üéµ B·∫≠t nh·∫°c";
      } else {
        music.play().catch(e => {
          console.log("L·ªói ph√°t nh·∫°c:", e);
          alert("Nh·∫°c kh√¥ng th·ªÉ ph√°t t·ª± ƒë·ªông. Vui l√≤ng nh·∫•n n√∫t 'B·∫≠t nh·∫°c' ƒë·ªÉ nghe.");
        });
        musicBtn.textContent = "‚è∏Ô∏è T·∫°m d·ª´ng";
      }
      isPlaying = !isPlaying;
    });

    // --- ·∫¢nh bay quanh m√†n h√¨nh ---
    const imgSrc = "https://via.placeholder.com/200x150/ffb6c1/ffffff?text=·∫¢nh+M·∫π"; // ·∫£nh placeholder
    const numImages = 5; // Gi·∫£m s·ªë l∆∞·ª£ng ·∫£nh ƒë·ªÉ kh√¥ng che khu·∫•t n·ªôi dung

    function createFlyingImage() {
      const img = document.createElement("img");
      img.src = imgSrc;
      img.classList.add("flying-img");
      img.style.left = Math.random() * 100 + "vw";
      img.style.top = Math.random() * 100 + "vh";
      document.body.appendChild(img);

      // Chuy·ªÉn ƒë·ªông ng·∫´u nhi√™n
      const xMove = Math.random() * 100 - 50;
      const yMove = Math.random() * 100 - 50;

      img.animate(
        [
          { transform: "translate(0, 0) rotate(0deg)" },
          { transform: `translate(${xMove}px, ${yMove}px) rotate(${Math.random() * 360}deg)` }
        ],
        {
          duration: 3000 + Math.random() * 2000,
          direction: "alternate",
          iterations: Infinity,
          easing: "ease-in-out"
        }
      );
    }

    for (let i = 0; i < numImages; i++) {
      createFlyingImage();
    }

    // Hi·ªáu ·ª©ng khi click v√†o m√†n h√¨nh
    document.addEventListener("click", (e) => {
      // T·∫°o ph√°o hoa t·∫°i v·ªã tr√≠ click
      createFirework(e.clientX, e.clientY);
      
      // Hi·ªÉn th·ªã th√¥ng ƒëi·ªáp ƒë·∫∑c bi·ªát
      const message = document.getElementById("specialMessage");
      message.classList.add("show");
      
      // ·∫®n th√¥ng ƒëi·ªáp sau 5 gi√¢y
      setTimeout(() => {
        message.classList.remove("show");
      }, 5000);
    });

    // T·∫°o hi·ªáu ·ª©ng ph√°o hoa
    function createFirework(x, y) {
      const colors = ['#ff4d88', '#d63384', '#ff80ab', '#ff4081', '#f50057'];
      
      for (let i = 0; i < 30; i++) {
        const particle = document.createElement("div");
        particle.classList.add("firework");
        particle.style.left = x + "px";
        particle.style.top = y + "px";
        particle.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
        document.body.appendChild(particle);
        
        const angle = Math.random() * Math.PI * 2;
        const speed = 2 + Math.random() * 3;
        const vx = Math.cos(angle) * speed;
        const vy = Math.sin(angle) * speed;
        
        particle.animate(
          [
            { transform: 'translate(0, 0)', opacity: 1 },
            { transform: `translate(${vx * 100}px, ${vy * 100}px)`, opacity: 0 }
          ],
          {
            duration: 1000 + Math.random() * 500,
            easing: 'ease-out'
          }
        );
        
        setTimeout(() => particle.remove(), 1500);
      }
    }
  </script>

