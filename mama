  <script>
    // Tim bay ng·∫´u nhi√™n
    function createHeart() {
      const heart = document.createElement("div");
      heart.classList.add("heart");
      heart.textContent = "‚ù§Ô∏è";
      heart.style.left = Math.random() * 100 + "vw";
      heart.style.animationDuration = Math.random() * 2 + 3 + "s";
      document.body.appendChild(heart);
      setTimeout(() => heart.remove(), 5000);
    }
    setInterval(createHeart, 300);

    // Nh·∫°c b·∫≠t khi click
    const music = document.getElementById("music");
    document.addEventListener("click", () => {
      music.muted = false;
      music.play();
    });

    // --- ·∫¢nh bay quanh m√†n h√¨nh ---
    const imgSrc = "me.png"; // ·∫£nh c·ªßa b·∫°n
    const numImages = 10; // s·ªë l∆∞·ª£ng ·∫£nh mu·ªën xu·∫•t hi·ªán

    function createFlyingImage() {
      const img = document.createElement("img");
      img.src = imgSrc;
      img.classList.add("flying-img");
      img.style.left = Math.random() * 100 + "vw";
      img.style.top = Math.random() * 100 + "vh";
      document.body.appendChild(img);

      // Chuy·ªÉn ƒë·ªông ng·∫´u nhi√™n
      const xMove = Math.random() * 200 - 100;
      const yMove = Math.random() * 200 - 100;

      img.animate(
        [
          { transform: "translate(0, 0) rotate(0deg)" },
          { transform: `translate(${xMove}px, ${yMove}px) rotate(${Math.random() * 360}deg)` }
        ],
        {
          duration: 3000 + Math.random() * 2000,
          direction: "alternate",
          iterations: Infinity,
          easing: "ease-in-out"
        }
      );
    }

    for (let i = 0; i < numImages; i++) {
      createFlyingImage();
    }
  </script>

